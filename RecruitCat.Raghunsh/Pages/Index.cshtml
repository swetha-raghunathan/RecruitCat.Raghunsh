@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center;">
    <h1 class="display-4">Headwig</h1>
    <div class="card-deck">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/Imgs/Address.jpg" alt="Card image">
            <div class="card-body ">
                <h5 class="card-title">Address</h5>
                <p class="card-text">21777 Hoover Rd, Warren, MI 48089</p>
            </div>
        </div>

        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/Imgs/Contact Us.jpg" alt="Card image">
            <div class="card-body">
                <h5 class="card-title">Contact Us</h5>
                <p class="card-text">461-492-8226</p>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/Imgs/Industries.jpg" alt="Card image">
            <div class="card-body">
                <h5 class="card-title">Industries our Company specializes in </h5>
                <p class="card-text">We specilize in providing our customers with Hardware and Software Solutions. Additionally, we also provide laptop services.</p>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="card-deck">
        <div class="card" style="width: 18rem;">

            <div class="card-body">
                <h5 class="card-title">Services Offered</h5>
                <ul class="list-group">
                    <li class="list-group-item">Database Solutions</li>
                    <li class="list-group-item">Hardware Solutions</li>
                    <li class="list-group-item">Laptop Services</li>
                    <li class="list-group-item">Software Solutions</li>
                </ul>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/Imgs/Hiring.png" alt="Card image">
            <div class="card-body">
                <h5 class="card-title">We are hiring now! Please register to get an opportunity to work with us!</h5>
                <button class="btn btn-primary">Register Now</button>
            </div>
        </div>
    </div>
</div>

<br />
<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="bd-example">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Imgs/Sundar Pichai.jpg" class="d-block w-100" alt="Image of Sundar Pichai">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Testimonial from Mr. Sundar Pichai</h5>
                        <p>I have worked in Headwig for 5 years now and it's an amazing company to work for! So glad to be a part of the Marketing Team here at Headwig.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Imgs/Mark Zukerberg.jpg" class="d-block w-100" alt="Image of Mark Zukerberge">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Testimonal from Mark- Our customer</h5>
                        <p>My go to company for all hardware and software issues!Amazing customer service and an even better pricing!</p>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="~/Imgs/Satya Nadella.jpg" class="d-block w-100" alt="Image of Satya Nadella">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Testimonial from Mr. Satya Nadella</h5>
                        <p>Amazing place to work! I have so much more to learn and give back and I'm glad to be a part of this organization.</p>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
           







